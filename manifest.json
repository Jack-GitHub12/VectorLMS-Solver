{
    "manifest_version": 3,
    "name": "VectorLMS Solver",
    "version": "1.0.0",
    "description": "Automate Vector LMS completion: auto-advance slides, play videos, handle tabs & tasks, and complete surveys.", 
    "permissions": [
      "storage",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "https://*.vectorlmsedu.com/*",
      "https://*.trainingcdn.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://*.vectorlmsedu.com/*",
          "https://*.trainingcdn.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": true
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "VectorLMS Solver"
    }
  }